<UserControl x:Class="Dmca.App.Views.ProposalReviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Dmca.App.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:ProposalReviewViewModel}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{StaticResource BackgroundBrush}">

    <DockPanel Margin="24">
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,16">
            <TextBlock Text="Proposal Review" Style="{StaticResource SectionHeading}" />
            <StackPanel Orientation="Horizontal">
                <Button Content="↻ Refresh" Command="{Binding RefreshCommand}"
                        Style="{StaticResource PrimaryButton}" />
                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Margin="16,0,0,0"
                           Foreground="{StaticResource TextSecondaryBrush}" />
            </StackPanel>
        </StackPanel>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Proposal list -->
            <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,8,0">
                <ListBox ItemsSource="{Binding Proposals}"
                         SelectedItem="{Binding SelectedProposal}"
                         BorderThickness="0" Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="4,8">
                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14" />
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <TextBlock Text="{Binding Status}" FontSize="12"
                                               Foreground="{StaticResource TextSecondaryBrush}" />
                                    <TextBlock Text=" · " Foreground="{StaticResource TextSecondaryBrush}" />
                                    <TextBlock Text="{Binding Risk}" FontSize="12"
                                               Foreground="{StaticResource TextSecondaryBrush}" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <!-- Proposal details -->
            <Border Grid.Column="1" Style="{StaticResource Card}" Margin="8,0,0,0">
                <StackPanel DataContext="{Binding SelectedProposal}">
                    <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8" />

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Style="{StaticResource StatusBadge}" Background="#E3F2FD">
                            <TextBlock Text="{Binding Status}" FontSize="12" Foreground="{StaticResource PrimaryBrush}" />
                        </Border>
                        <Border Style="{StaticResource StatusBadge}" Background="#FFF3E0" Margin="8,0,0,0">
                            <TextBlock Text="{Binding Risk}" FontSize="12" Foreground="{StaticResource WarningBrush}" />
                        </Border>
                    </StackPanel>

                    <TextBlock Text="Changes" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8" />
                    <ItemsControl ItemsSource="{Binding Changes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,6">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Type}" FontWeight="SemiBold" Width="100" />
                                            <TextBlock Text="{Binding TargetId}" />
                                        </StackPanel>
                                        <TextBlock Text="{Binding Reason}" Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontSize="12" Margin="100,2,0,0" TextWrapping="Wrap" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Action buttons -->
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Button Content="✓ Approve"
                                Command="{Binding DataContext.ApproveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource PrimaryButton}" Background="{StaticResource SuccessBrush}" Margin="0,0,8,0" />
                        <Button Content="✗ Reject"
                                Command="{Binding DataContext.RejectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource DangerButton}" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</UserControl>
